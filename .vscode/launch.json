    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run Django Server",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}\\manage.py",
            "args": [
                "runserver"
            ],
            "django": true,
            "justMyCode": true
        },
        {
            "name": "Migrate data",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}\\manage.py",
            "args": [
                "migrate"
            ],
            "django": true,
            "justMyCode": true
        },
        {
            "name": "Make migrations",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}\\manage.py",
